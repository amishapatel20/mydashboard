    # Filter out zero values (if any)
    data_to_plot = data_to_plot[data_to_plot != 0]

    # Check if theres any remaining data to plot
    if not data_to_plot.empty:
        data_to_plot.plot(title=standardized_name, figsize=(16, 9))
