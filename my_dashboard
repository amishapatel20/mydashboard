if to_impute.empty:
    print("Warning: DataFrame 'to_impute' is empty. Skipping imputation.")
else:
    # Now IterativeImputer should be recognized
    df_social.iloc[:,2:9] = pd.DataFrame(IterativeImputer().fit_transform(to_impute),columns = imp_cols)

